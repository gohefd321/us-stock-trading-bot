# US Stock Trading Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Korea Investment Securities API
KOREA_INVESTMENT_API_KEY=your_api_key_here
KOREA_INVESTMENT_API_SECRET=your_api_secret_here
KOREA_INVESTMENT_ACCOUNT_NUMBER=your_account_number_here
KOREA_INVESTMENT_PAPER_MODE=false  # Set to true for paper trading (simulation)

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Reddit API (Optional - for WallStreetBets scraping)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TradingBot/1.0

# KakaoTalk API (Optional - for notifications)
KAKAO_REST_API_KEY=your_kakao_api_key

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/trading_bot.db

# Application Settings
APP_NAME=US Stock Trading Bot
APP_VERSION=1.0.0
LOG_LEVEL=INFO
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Trading Parameters
INITIAL_CAPITAL_KRW=1000000
MAX_POSITION_SIZE_PCT=40
DAILY_LOSS_LIMIT_PCT=20
STOP_LOSS_PCT=30

# CORS Origins (comma-separated)
# For Cloudflare Tunnel, add your domain here
# Example: CORS_ORIGINS=https://stocking.daechanserver.com,http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://stocking.daechanserver.com,http://stocking.daechanserver.com
